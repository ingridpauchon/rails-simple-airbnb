
<div class="container">
  <%= link_to 'Create flat', new_flat_path, class: "btn btn-outline-success my-2 my-sm-0"%>
  <% @flats.each do |flat| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= flat.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
    <p class="card-text"><%= flat.description %></p>
    <p class="card-text"><%= flat.price_per_night %></p>
    <%= link_to 'more details', flat_path(flat) %>
  </div>
</div>
<% end %>
</div>




